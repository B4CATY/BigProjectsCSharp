@model ShopWeb.ViewModels.LoginModel
 
<h2>Authorization</h2>
 
<a asp-action="Register" asp-controller="Account" type="button" class="btn btn-primary mx-2">Registration</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true"><br />
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login">Type Login</label>
            <input type="text" asp-for="Login" class="form-control" />
            <span asp-validation-for="Login" class="text-danger"/>
        </div>
        <div class="form-group">
            <label asp-for="Password">Type Password</label>
            <input asp-for="Password" class="form-control"  />
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit"  value="Log in" class="btn btn-primary mx-2" />
        </div>
    </div>
</form>
